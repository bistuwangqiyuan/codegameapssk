---
/**
 * CourseProgress Component
 * Displays overall progress for a level
 */
interface Props {
    levelId: string;
    levelNumber: number;
}

const { levelId, levelNumber } = Astro.props;

// Mock data - will be fetched from server in production
const progress = {
    totalLessons: 12,
    completedLessons: 0,
    totalChallenges: 18,
    completedChallenges: 0,
    progressPercentage: 0,
    xpEarned: 0,
    timeSpent: 0 // minutes
};

const levelColors: Record<number, string> = {
    1: 'bg-green-500',
    2: 'bg-blue-500',
    3: 'bg-purple-500',
    4: 'bg-orange-500',
    5: 'bg-red-500'
};

const bgColor = levelColors[levelNumber] || 'bg-blue-500';
---

<div class="bg-white rounded-xl shadow-md p-6 sticky top-6">
    <h3 class="text-lg font-bold text-gray-900 mb-6 flex items-center gap-2">
        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
            ></path>
        </svg>
        Your Progress
    </h3>

    <!-- Overall Progress -->
    <div class="mb-6">
        <div class="flex items-center justify-between mb-2">
            <span class="text-sm font-semibold text-gray-700">Overall</span>
            <span class="text-2xl font-bold text-gray-900">{progress.progressPercentage}%</span>
        </div>
        <div class="h-3 bg-gray-200 rounded-full overflow-hidden">
            <div class={`h-full ${bgColor} transition-all duration-300`} style={`width: ${progress.progressPercentage}%`}></div>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="space-y-4 mb-6">
        <!-- Lessons -->
        <div class="flex items-center justify-between py-3 border-b border-gray-100">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                    ></path>
                </svg>
                <span class="text-sm text-gray-700">Lessons</span>
            </div>
            <span class="font-bold text-gray-900">{progress.completedLessons} / {progress.totalLessons}</span>
        </div>

        <!-- Challenges -->
        <div class="flex items-center justify-between py-3 border-b border-gray-100">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                    ></path>
                </svg>
                <span class="text-sm text-gray-700">Challenges</span>
            </div>
            <span class="font-bold text-gray-900">{progress.completedChallenges} / {progress.totalChallenges}</span>
        </div>

        <!-- XP Earned -->
        <div class="flex items-center justify-between py-3 border-b border-gray-100">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
                    ></path>
                </svg>
                <span class="text-sm text-gray-700">XP Earned</span>
            </div>
            <span class="font-bold text-purple-600">{progress.xpEarned}</span>
        </div>

        <!-- Time Spent -->
        <div class="flex items-center justify-between py-3">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-sm text-gray-700">Time Spent</span>
            </div>
            <span class="font-bold text-gray-900">{progress.timeSpent} min</span>
        </div>
    </div>

    <!-- Motivational Message -->
    <div class="bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg p-4">
        <p class="text-sm text-gray-700 text-center">
            {
                progress.progressPercentage === 0
                    ? 'ðŸš€ Start your learning journey!'
                    : progress.progressPercentage < 50
                      ? "ðŸ’ª Keep going! You're making great progress!"
                      : progress.progressPercentage < 100
                        ? 'ðŸŒŸ Almost there! Finish strong!'
                        : 'ðŸŽ‰ Level complete! Amazing work!'
            }
        </p>
    </div>
</div>
